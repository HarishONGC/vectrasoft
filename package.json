{
  "name": "cctv-dashboard",
  "private": true,
  "version": "1.0.0",
  "description": "Centralized CCTV Monitoring Dashboard (frontend + backend)",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm --prefix backend run build && npm --prefix frontend run build",
    "setup": "npm --prefix backend install && npm --prefix frontend install && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
